@{
    var IsAuthenticated = User.Identity.IsAuthenticated;
}

@if (IsAuthenticated)
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Identity" asp-action="SignOut">Logout</a>
    </li>
    <li class="nav-item">
        <label class="nav-link text-dark">Hello <b>@User.Identity.Name</b></label>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Identity" asp-action="Signin">Login</a>
    </li>
}